<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EstimateCloseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_round_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alert_estimate_close_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-10dp"
                android:padding="10dp"
                android:src="@drawable/del_img" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/close_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/s_core_dream_6"
                android:text="여행견적 신청 페이지를\n나가시겠습니까?"
                android:textColor="#171717"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alert_city_sel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/s_core_dream_4"
                android:gravity="center"
                android:text="작성 중인 내용은\n저장되지 않고 사라집니다."
                android:textColor="#171717"
                android:textSize="14dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/alert_estimate_close_cancle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/update_cancle_btn"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/s_core_dream_5_medium"
                        android:gravity="center_horizontal"
                        android:text="취소"
                        android:textColor="#4f5664"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/update_btn_margin"
                    android:layout_width="6dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:id="@+id/alert_estimate_close_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/update_btn"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/s_core_dream_5_medium"
                        android:gravity="center_horizontal"
                        android:text="나가기"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>