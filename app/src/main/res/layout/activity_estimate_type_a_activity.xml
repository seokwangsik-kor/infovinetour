<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EstimateType_A_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/estimate_type_a_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_btn_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/apple_sd_gothic_neo_m"
                android:gravity="center"
                android:text="견적서 추가사항"
                android:textColor="#171717"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/global_estimate_menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_btn_menu" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/estimate_type_b_cityimg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/city_img_ss" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:fontFamily="@font/apple_sd_gothic_neo_heavy"
                                android:letterSpacing="-0.05"
                                android:text="선호하는"
                                android:textColor="#171717"
                                android:textSize="32dp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:letterSpacing="-0.05"
                                android:text="사향이 있으신가요?"
                                android:textColor="#171717"
                                android:textSize="15dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="#edeef0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/air48" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:text="항공사"
                                android:textColor="#171717"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:gravity="end"
                                android:textColor="#ff7b54"
                                android:textSize="13dp"
                                android:textStyle="normal"
                                tools:text="* 중복가능" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/estimate_type_a_recyclerview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginRight="5dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="16dp"
                            android:background="#edeef0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/estimate_type_a_sel1_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_round_background"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="5dp"
                                android:text=""
                                android:textColor="#171717"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/btn_etc_up"/>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="#edeef0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="4dp"
                                    android:src="@drawable/ic_02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/apple_sd_gothic_neo_m"
                                    android:text="숙박"
                                    android:textColor="#171717"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="16dp"
                                    android:fontFamily="@font/apple_sd_gothic_neo_m"
                                    android:gravity="end"
                                    android:textColor="#ff7b54"
                                    android:textSize="13dp"
                                    android:textStyle="normal"
                                    tools:text="* 중복가능" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/estimate_type_a_recyclerview2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="5dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="16dp"
                                android:background="#edeef0" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/estimate_type_a_sel2_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_round_background"
                                    android:fontFamily="@font/apple_sd_gothic_neo_m"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:text=""
                                    android:textColor="#171717"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="29dp"
                                    android:layout_height="29dp"
                                    android:layout_marginLeft="4dp"
                                    android:src="@drawable/btn_etc_up"/>

                            </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="#edeef0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="100dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_03" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:text="이동수단"
                                android:textColor="#171717"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:gravity="end"
                                android:textColor="#ff7b54"
                                android:textSize="13dp"
                                android:textStyle="normal"
                                tools:text="* 중복가능" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/estimate_type_a_recyclerview3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginRight="5dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="16dp"
                            android:background="#edeef0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/estimate_type_a_sel3_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_round_background"
                                android:fontFamily="@font/apple_sd_gothic_neo_m"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="5dp"
                                android:text=""
                                android:textColor="#171717"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="29dp"
                                android:layout_height="29dp"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/btn_etc_up"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/estimate_type_a_bottom_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/estimate_type_a_bottom_back_btn"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/cancle_btn"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:gravity="center_horizontal"
                        android:text="이전"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/estimate_type_a_bottom_confirm_btn"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <CheckBox
                        android:id="@+id/estimate_type_a_bottom_confirm_check"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/terms_check_finish_btn"
                        android:button="@android:color/transparent"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:text="다음"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>